@model IEnumerable<CongThongTinMobifone.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<!-- Carousel -->
<div id="demo" class="carousel slide" data-bs-ride="carousel">

    <!-- Indicators/dots -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
    </div>

    <!-- The slideshow/carousel -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/banner/banner1.jpg" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="~/images/banner/banner2.jpg" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="~/images/banner/banner3.jpg" class="d-block w-100">
        </div>
    </div>

    <!-- Left and right controls/icons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>


<div class="col-12">
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h4 class="p-title ml-md-1"><b>BÀI VIẾT GẦN ĐÂY</b></h4>
                    @foreach (var item in Model)
                    {
                        <div class="link row oflow-hidden pos-relative mb-md-2 mb-1 dplay-block ml-md-1">
                            <div class="col-md-4 col-12 pl-md-0 pb-sm-2" style="height:auto">
                                <a asp-action="Details" asp-route-id="@item.PostID">
                                    <img class="card-img-top" width="300px" height="200px" src="~/images/Post_avt/@Html.DisplayFor(modelItem => item.avatar)">
                                </a>
                            </div>
                            <div class="col-md-8 col-12 pt-sm-2 pt-md-0">
                                <div class="min-h-100x">
                                    <h5 class="font-weight-bold">@item.Post_title</h5>
                                    <p>@(item.Post_content1.Length >= 150 ? item.Post_content1.Substring(0, 150) : item.Post_content1 + "..")</p>
                                    <ul>
                                        <li class="latest"><span class="fa fa-calendar mr-1" style="color:#777777"></span>@String.Format("{0:dd-MM-yyyy}", item.Date_created)</li>
                                        @* <li class="latest"><span class="fa fa-tags mr-1" style="color:#777777"></span>@item.Tbl_Tags.FirstOrDefault().TagName</li> *@
                                    </ul>
                                </div>
                            </div>
                        </div>

                    }
                </div>
                <!-- container -->
                <div class="col-md-4">
                    <h4 class="p-title"><b>PHỔ BIẾN</b></h4>
                    @foreach (var item in Model)
                    {
                        <div class="card" style="width:200px">
                            <a asp-action="Details" asp-route-id="@item.PostID">
                                <img class="card-img-top w-100" src="~/images/Post_avt/@Html.DisplayFor(modelItem => item.avatar)">
                            
                                <div class="ml-120 min-h-100x smallpop">
                                    <h5 class="poppost">@item.Post_title</h5>
                                    <h6 class="color-lite-black pt-2 mb-1">
                                        <i class="fa fa-calendar-o mr-1"></i>@String.Format("{0:dd/MM/yyyy}", item.Date_created)
                                    </h6>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
