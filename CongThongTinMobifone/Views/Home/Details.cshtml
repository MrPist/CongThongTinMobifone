@model CongThongTinMobifone.Models.Post

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout_Trangchinh.cshtml";
}

<div>
    <hr />
    <div class="container p-5 my-5 border border-3">
        <div class="row">
            <div class="col-12">
                <div class="col-md-2"></div>
                <div class="col-md-8>">
                    <img class="rounded mx-auto d-block" width="400px" height="450px" src="~/images/Post_avt/@Html.DisplayFor(model => model.avatar)"></img>
                    <h1 class="text-center text-primary font-weight-bold">
                        @Html.Raw(Model.Post_title)
                    </h1>
                    <div font-size="13px" font-style="italic" margin-left="auto">@Html.DisplayFor(model => model.Date_created)</div>
                    <div class="text-justify"> @Html.Raw(Model.Post_content)</div>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </div>
</div>
