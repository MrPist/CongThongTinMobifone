@model CongThongTinMobifone.Models.Package

@{
    Layout = "~/Views/Shared/_LayoutAdmin1.cshtml";
}

<h1>Chỉnh sửa</h1>

<h4>Gói cước</h4>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Package_ID" />
            <div class="form-group">
                <label asp-for="Package_title" class="control-label"></label>
                <input asp-for="Package_title" class="form-control" />
                <span asp-validation-for="Package_title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package_CateID" class="control-label"></label>
                <select asp-for="Package_CateID" class="form-control" asp-items="ViewBag.Package_CateID"></select>
                <span asp-validation-for="Package_CateID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package_content" class="control-label"></label>
                <input asp-for="Package_content" class="form-control" />
                <span asp-validation-for="Package_content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostCateID" class="control-label"></label>
                <select asp-for="PostCateID" class="form-control" asp-items="ViewBag.PostCateID"></select>
                <span asp-validation-for="PostCateID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cost" class="control-label"></label>
                <input asp-for="cost" class="form-control" />
                <span asp-validation-for="cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="link" class="control-label"></label>
                <input asp-for="link" class="form-control" />
                <span asp-validation-for="link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
