@model IEnumerable<CongThongTinMobifone.Models.Package>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Gói cước vừa được tìm kiếm</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Package_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package_title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package_content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageIDNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageCateIDNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Package_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Package_title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Package_content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.link)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageIDNavigation.PostCateID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageCateIDNavigation.Package_CateID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Package_ID">Edit</a> |
                    <a asp-action="Details" asp-controller="Packages" asp-route-id="@item.Package_ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Package_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
