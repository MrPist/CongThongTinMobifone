@model CongThongTinMobifone.Models.Post

@{
    Layout = "~/Views/Shared/_LayoutAdmin1.cshtml";
}

<h4>Bản tin</h4>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostID" />
            <div class="form-group">
                <label asp-for="PostCateID" class="control-label"></label>
                <select asp-for="PostCateID" class="form-control" asp-items="ViewBag.PostCateID"></select>
                <span asp-validation-for="PostCateID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post_title" class="control-label"></label>
                <input asp-for="Post_title" class="form-control" />
                <span asp-validation-for="Post_title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post_content1" class="control-label"></label>
                <input asp-for="Post_content1" class="form-control" />
                <span asp-validation-for="Post_content1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post_content2" class="control-label"></label>
                <input asp-for="Post_content2" class="form-control" />
                <span asp-validation-for="Post_content2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post_content3" class="control-label"></label>
                <input asp-for="Post_content3" class="form-control" />
                <span asp-validation-for="Post_content3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post_content4" class="control-label"></label>
                <input asp-for="Post_content4" class="form-control" />
                <span asp-validation-for="Post_content4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="avatar" class="control-label"></label>
                <input asp-for="avatar" type="file" class="form-control" />
                <span asp-validation-for="avatar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="img1" class="control-label"></label>
                <input asp-for="img1" type="file" class="form-control" />
                <span asp-validation-for="img1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="img2" class="control-label"></label>
                <input asp-for="img2" type="file" class="form-control" />
                <span asp-validation-for="img2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="img3" class="control-label"></label>
                <input asp-for="img3" type="file" class="form-control" />
                <span asp-validation-for="img3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_created" class="control-label"></label>
                <input asp-for="Date_created" class="form-control" />
                <span asp-validation-for="Date_created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_update" class="control-label"></label>
                <input asp-for="Date_update" class="form-control" />
                <span asp-validation-for="Date_update" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
